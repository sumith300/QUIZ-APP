{
	"info": {
		"_postman_id": "auth-service-collection",
		"name": "Auth Service",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Register User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
				},
				"url": {
					"raw": "http://localhost:8765/auth-service/auth/register",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8765",
					"path": [
						"auth-service",
						"auth",
						"register"
					]
				}
			}
		},
		{
			"name": "Login User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}"
				},
				"url": {
					"raw": "http://localhost:8765/auth-service/auth/login",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8765",
					"path": [
						"auth-service",
						"auth",
						"login"
					]
				}
			}
		},
		{
			"name": "Validate Token",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					}
				],
				"url": {
					"raw": "http://localhost:8765/auth-service/auth/validate",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8765",
					"path": [
						"auth-service",
						"auth",
						"validate"
					]
				}
			}
		},
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"url": {
					"raw": "http://localhost:8765/auth-service/auth/health",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8765",
					"path": [
						"auth-service",
						"auth",
						"health"
					]
				}
			}
		}
	],
	"variable": [
		{
			"key": "jwt_token",
			"value": "your-jwt-token-here"
		}
	]
} 